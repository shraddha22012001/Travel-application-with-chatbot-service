<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.AdminHotelBookingDetailsActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">
    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Booking Details"
        android:textColor="#290E17"
        android:layout_margin="10dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="22dp"
        android:gravity="center_horizontal">

    </TextView>
        <TextView
            android:id="@+id/txt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User Details"
            android:textColor="#CA688A"
            android:layout_margin="10dp"

            android:textStyle="bold"
            android:textSize="22dp"
           >

        </TextView>
        <TextView
            android:id="@+id/book_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Booking User Name"
            android:textColor="#040404"
            android:layout_margin="10dp"
            android:textSize="22dp"
            >

        </TextView>
        <TextView
            android:id="@+id/book_user_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Booking Phone"
            android:textColor="#040404"
            android:layout_margin="10dp"
            android:textSize="22dp"
          >

        </TextView>

        <TextView
            android:id="@+id/book_user_permanent_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Booking Address"
            android:textColor="#040404"
            android:layout_margin="10dp"
            android:textSize="22dp"
            >

        </TextView>
        <TextView
            android:id="@+id/txt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hotel Details"
            android:textColor="#CA688A"
            android:layout_margin="10dp"

            android:textStyle="bold"
            android:textSize="22dp"
            >

        </TextView>
        <TextView
            android:id="@+id/book_user_hotel_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Booking Hotel Name"
            android:textColor="#040404"
            android:layout_margin="10dp"
            android:textSize="22dp"
            >

        </TextView>  <TextView
        android:id="@+id/book_user_hotel_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Booking Hotel Address"
        android:textColor="#040404"
        android:layout_margin="10dp"
        android:textSize="22dp"
        >

    </TextView>
        <TextView
            android:id="@+id/txt3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Check In Details"
            android:textColor="#CA688A"
            android:layout_margin="10dp"

            android:textStyle="bold"
            android:textSize="22dp"
            >

        </TextView>
        <TextView
            android:id="@+id/book_user_Booked_at"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Booked on"
            android:textColor="#040404"
            android:layout_margin="10dp"
            android:textSize="22dp"
            ></TextView>
        <TextView
            android:id="@+id/book_user_from_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Booking From"
            android:textColor="#040404"
            android:layout_margin="10dp"
            android:textSize="22dp"
            ></TextView>
        <TextView
            android:id="@+id/book_user_no_of_days"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Booking No of days"
            android:textColor="#040404"
            android:layout_margin="10dp"
            android:textSize="22dp"
            ></TextView>
        <TextView
            android:id="@+id/book_user_no_rooms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Booking Number of Romms"
            android:textColor="#040404"
            android:layout_margin="10dp"
            android:textSize="22dp"
            >
        </TextView>
        <TextView
            android:id="@+id/book_user_no_adults"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Booking Number of Adults"
            android:textColor="#040404"
            android:layout_margin="10dp"
            android:textSize="22dp"
            >
        </TextView>
        <TextView
            android:id="@+id/book_user_no_childs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Booking Number of Children"
            android:textColor="#040404"
            android:layout_margin="10dp"
            android:textSize="22dp"
            >
        </TextView>
        <TextView
            android:id="@+id/book_user_checkin_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Check-In Time"
            android:textColor="#040404"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="100dp"
            android:textSize="22dp"
            >
        </TextView>
    </LinearLayout>

</ScrollView>